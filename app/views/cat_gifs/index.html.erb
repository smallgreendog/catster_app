  <!-- Image Background Page Header -->
  <!-- Note: The background image is set within the business-casual.css file. -->
  <header class="business-header">
    <div class="container">
      <div class="row">
        <div class="title col-sm-12">
          <h1 class="tagline">Catster</h1>
          <h2 class="subtitle">Making the world better by adding cats</h2>
        </div>
      </div>
    </div>
  </header>

  <!-- Page Content -->
  <div class="container">

    <hr>
  
    <div class="row new-cat">
      <div class="col-sm-12">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h1 class="panel-title">Get a new cat in your inbox daily</h3>
            </div>
            <div class="panel-body">
              <%= form_for @signup, html: {class: "form-inline text-center"} do |f| %>
                <div class="form-group">
                  <%= f.email_field :email_address, class: "form-control input-lg", size: 50, placeholder: "david@catster.com" %>
                </div>  
                <%= f.submit "Signup", class: "btn btn-primary btn-lg signup-button" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <hr>

      <div class="row all-cats">
        <%- @cat_gifs.each do |cat_gif| %>
          <div class="col-sm-4" id=<%= cat_gif.id %>>
            <div class="cat-gif img-circle img-center" style="background-image:url(<%= cat_gif.url %>)"></div>
            <div class="vote">
              <span class="score">
                <%= cat_gif.score || 0 %>
              </span>
              <%= link_to"/cat_gifs/#{cat_gif.id}/upvote", class: "btn btn-default btn-lg up" do %>
                <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
                UpVote
              <% end %>
                
              <%= link_to "/cat_gifs/#{cat_gif.id}/downvote", class: "btn btn-default btn-lg down" do %>
                <span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span>
                DownVote
              <% end %>
            </div>
          </div>
        <% end %>

        <div class="col-sm-4">
          <%= link_to "Add a Cat", new_cat_gif_path, class: "btn btn-success btn-lg right" %>
       </div>
     </div>
     <!-- /.row -->

     <div class="row">
      <%- if @cleaned_reddit_cat_gifs.present? %>
        <h2>Reddit Cats</h2>
        <%- @cleaned_reddit_cat_gifs.each do |cat_gif| %>
          <div class="col-sm-4 mt40">
            <div class="cat-gif img-circle img-center" style="background-image:url(<%= cat_gif["data"]["url"] %>)"></div>
          </div>
        <% end %>
      <% end %>
     </div>
  </div>
  <br>

